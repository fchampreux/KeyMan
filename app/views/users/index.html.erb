<h1><%= t('Users') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th> <%= t('Name') %></th>
      <th> <%= t('FirstName')%> </th>
      <th> <%= t('Section')%> </th>
      <th> <%= t('eMail')%> </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.first_name %></td>
        <td><%= user.group.name %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('NewUser'), new_user_path %>
