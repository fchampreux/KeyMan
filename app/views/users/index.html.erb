<h1><%= t('Users') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th> <%= t('UserName') %></th>
      <th> <%= t('FirstName')%> </th>
      <th> <%= t('Name') %></th>
      <th> <%= t('Role')%> </th>
      <th> <%= t('Group')%> </th>
      <th> <%= t('Section')%> </th>
      <th> <%= t('eMail')%> </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.user_name, user %></td>
        <td><%= user.first_name %></td>
        <td><%= user.name %></td>
        <td><%= user.role.name %></td>
        <td><%= user.group.name %></td>
        <td><%= user.section %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('NewUser'), new_user_path %>


