<%= form_for(@user) do |f| %>
<div class="row">
  <div class="col-md-6">
		<% if user.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
	
				<ul>
				<% user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
				</ul>
			</div>
		<% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-1 field_name">
    <%= t('Name') %> :
  </div>
  <div class="col-md-3 field">
    <%= f.text_field :name %>
  </div>
</div>

<div class="row">
  <div class="col-md-1 field_name">
    <%= t('First name') %> :
  </div>
  <div class="col-md-3">
    <%= f.text_field :first_name %>
  </div>
</div>

<div class="row">
  <div class="col-md-1 field_name">
    <%= t('Section') %> :
  </div>
  <div class="col-md-3">
    <%= f.collection_select :group_id, Group.all, :id, :name %> 
  </div>
</div>

<div class="row">
  <div class="col-md-1 field_name">
    <%= t('Role') %> :
  </div>
  <div class="col-md-3">
    <%= f.text_field :role %>
  </div>
</div>

<div class="row">
  <div class="col-md-1 field_name">
    <%= t('eMail') %> :
  </div>
  <div class="col-md-3">
    <%= f.text_field :email %>
  </div>
</div>

<div class="row">
  <div class="col-md-1">
		<div class="actions">
			<%= f.submit %>
		</div>
  </div>
</div>

<% end %>


