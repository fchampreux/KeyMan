<%= form_for(@user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nom %>
    <%= f.text_field :nom %>
  </div>

  <div class="field">
    <%= f.label :prenom %>
    <%= f.text_field :prenom %>
  </div>

  <div class="field">
    <%= f.label :section %>
    <%= f.text_field :section %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <% if @user.new_record? %>
    <div class="field">
      <%= f.label :password %>
      <%= f.text_field :password %>
      Retype
      <%= f.text_field :password_confirmation %>
    </div>
  <% end %>

  <hr/>
  <h2>Liste de clefs</h2>
  
  <table>
    <tr>
      <th></th>
      <th>Secteur</th>
      <th>Cipher</th>
    </tr>

    <%=  f.nested_fields_for :ciphers, wrapper_tag: 'tr' do |cipher| %>
      <td><%= cipher.remove_nested_fields_link {image_tag("remove.png")} %></td>
      <td><%= cipher.text_field :secteur %> </td>
      <td><%= cipher.text_field :clef %> </td>    
  <% end %>
  </table>
  
  <%= f.add_nested_fields_link :ciphers, image_tag("add.png") %> <%= t('New') %> 
  <br/><br/>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  

<% end %>


