<%= form_for(@user) do |f| %>
<div class="row">
  <div class="col-md-6">
		<% if @user.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
	
				<ul>
				<% @user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
				</ul>
			</div>
		<% end %>
  </div>
</div>

  <div class="row">
    <div class="col-md-4">
      <%= f.label t('Password') %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <div class="col-md-4">
      <%= f.label t('Confirmation') %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>
<br/>
<div class="row">
  <div class="col-md-2">
    <div class="actions">
      <%= f.submit t('Validate') %>
    </div>
  </div>  
</div>

<% end %>


