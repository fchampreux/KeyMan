<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class=col-md-4>
        <div class="field">
          <%= f.label :login %><br />
          <%= f.text_field :login, autofocus: true %>
        </div>
        <br/>
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        
    </div>
    <div class="col-md-5">
      <div style="border: 1px solid grey; border-radius: 5px;">
          <p> <%= diplayMD %>
              </p>
    <!--
        <br/>
        <%= f.label :uploaded_file, t('PKI_file') %>
        <%= f.file_field :uploaded_file %>  
    -->
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

