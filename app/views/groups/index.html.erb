<h1><%=t('Groups') %> </h1>

<table>
  <thead>
    <tr>
      <th><%= t('Name') %></th>
      <th><%= t('Code') %></th>
      <th><%= t('Description') %></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, group %></td>
        <td><%= group.code %></td>
        <td><%= group.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('NewGroup'), new_group_path %>
